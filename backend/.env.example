# ============================================================================
# CONFIGURATION BACKEND - Vulnerability Agent
# ============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Base de données
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://vulnagent:password@localhost:5432/vulnerability_db

# Pour Docker, utiliser:
# DATABASE_URL=postgresql://vulnagent:password@db:5432/vulnerability_db

# ============================================================================
# CONFIGURATION IA
# ============================================================================

# Provider IA (openai ou anthropic)
AI_PROVIDER=anthropic

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=120

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TIMEOUT=120

# ============================================================================
# LIMITES POUR ÉCONOMISER LES TOKENS
# ============================================================================

MAX_VULNERABILITIES_TO_ANALYZE=10
MAX_SCRIPTS_TO_GENERATE=5

# ============================================================================
# CONFIGURATION NMAP
# ============================================================================

NMAP_PATH=nmap
NMAP_TIMEOUT=3600

# ============================================================================
# SÉCURITÉ
# ============================================================================

SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# ============================================================================
# BASE DE DONNÉES
# ============================================================================

DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24
